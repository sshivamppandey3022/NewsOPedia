<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NewsOPedia"
        android:textSize="20dp"
        android:fontFamily="@font/f_bold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/magneta"
        android:gravity="center"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWS UPDATES"
            android:layout_weight="10"
            android:fontFamily="@font/f_bold"
            android:textColor="@color/magneta"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:padding="10dp"/>
        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/ic_dot_24dp"
            android:id="@+id/aboutUs"/>
        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"

            android:padding="10dp"
            android:background="@drawable/ic_dot_24dp"
            android:id="@+id/aboutUs2"/>
        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/ic_dot_24dp"
            android:id="@+id/aboutUs3"/>


    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="8dp"
        android:background="@drawable/round_black_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/etQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Search"
            android:fontFamily="@font/f_bold"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:padding="10dp"
            android:layout_column="0"
            android:background="#2b0a1e"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2b0a1e"
            android:layout_column="1"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:layout_row="0"/>




    </GridLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefresh">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>